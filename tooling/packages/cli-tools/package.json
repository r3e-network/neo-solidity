{
  "name": "@neo-solidity/cli-tools",
  "version": "0.1.0",
  "description": "Command-line tools for Neo-Solidity development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "solc-neo": "./dist/solc-neo.js",
    "neo-sol": "./dist/neo-sol.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./solc-neo": {
      "import": "./dist/solc-neo.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "neo",
    "solidity",
    "compiler",
    "cli",
    "blockchain",
    "neovm"
  ],
  "dependencies": {
    "@neo-solidity/types": "^0.1.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "debug": "^4.3.4",
    "semver": "^7.5.4",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/debug": "^4.1.12",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0"
  },
  "publishConfig": {
    "access": "public"
  }
}